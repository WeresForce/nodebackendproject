<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <div class="container">
            <% if (prods.length > 0){ %>
            <div class="grid">
                <% for(let product of prods){%>
                <article class="card product-item card--second">
                    <div class="card__image">
                        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                         <div class="card__actions">
                             <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn btn-edit"><img
                                     src="../../img/Edit_Notepad_Icon.svg" alt="" class="btn__img"></a>
                             <form action="/admin/delete-product" method="POST">
                                 <button class="btn btn-remove" type="submit"><img class="btn__img"
                                         src="../../img/interface.svg"
                                         alt=""></button>
                                 <input type="hidden" value="<%= product.id %>" name="productId">
                             </form>
                         </div>
                    </div>
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>

                    <div class="card__content">
                        <h2 class="product__price">$<%= product.price %></h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                   
                </article>
                <% } %>
            </div>
            <% } else { %>

            <h1>No Products Available!</h1>

            <% } %>

        </div>
    </main>
    <%- include('../includes/end.ejs')%>