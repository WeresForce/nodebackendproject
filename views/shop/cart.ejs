<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="detail-page is--product">
        <div class="detail-page__title">
            <h1>Cart</h1>
            <div class="detail-page-bg">
                <img src="../../img/caralog10.jpg" alt="" role="presentation">
            </div>
        </div>

        <div class="container">
            <div class="detail-page__body is--second">
                <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                    <li class="cart__item">
                        <div class="cart__item-title">
                            <h1><%= p.title %></h1>
                        </div>

                        <div class="cart__item-value">
                            <h2>Quantity: <%= p.cartItem.quantity %></h2>
                        </div>
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" value="<%= p.id %>" name="productId">
                            <button class="btn danger" type="submit"><img src="../img/interface.svg" alt=""></button>
                        </form>
                    </li>   
                    <% }) %>
                </ul>

                <form action="/create-order" method="POST">

                    <div class="form-control">
                        <label for="title">Full Name</label>
                        <input type="text" name="fullname" id="fullname">
                    </div>
            
                    <div class="form-control">
                        <label for="title">Email</label>
                        <input type="email" name="email" id="email" >
                    </div>            
            
                    <div class="form-control">
                        <label for="title">People count</label>
                        <input type="number" name="peoplecount" id="peoplecount" step="1">
                    </div>          
                    
                    <div class="form-control">
                        <label for="title">Additional Notes</label>
                        <textarea name="notes" id="notes" rows="5"></textarea>
                    </div>

                    <button type="submit" class="btn-link">Order Now</button>
                </form>
                <% } else { %>
                <h1>No Products in Cart!</h1>
                <% } %>
            </div>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>