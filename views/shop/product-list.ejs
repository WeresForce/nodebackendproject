    <%- include('../includes/head.ejs')%>    
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
    <%- include('../includes/navigation.ejs')%>

            <main class="detail-page is--product">
                <div class="detail-page__title">
                    <h1>Products</h1>
                    <div class="detail-page-bg">
                        <img src="../../img/caralog10.jpg" alt="" role="presentation">
                    </div>
                </div>
                <div class="container">
                    <% if (prods.length > 0){ %>
                        <div class="grid">
                                <% for(let product of prods){%>
                                    <article class="card product-item">
                                        <div class="card__image">
                                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                            <div class="card__actions">
                                                
                                                <%- include('../includes/add-product.ejs',{product:product})%>
                                            </div>
                                        </div>
                                        <header class="card__header">
                                            <h1 class="product__title"><%= product.title %></h1>
                                        </header>
                                        <div class="card__content">
                                            <h2 class="product__price">$<%= product.price %></h2>
                                            <p class="product__description"><%= product.description %></p>
                                            

                                            <a href="/products/<%= product.id %>" class="btn-link">Details</a>
                                        </div>
                                        
                                    </article>
                                <% } %>
                            </div>       
    
                    <% } else { %>
    
                        <h1>No Products Available!</h1>
    
                    <% } %>
                </div>        
            </main>
    <%- include('../includes/end.ejs')%>